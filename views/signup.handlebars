<!DOCTYPE html>
<html>

<head>
    <title></title>
</head>

<body>
    <div class="container">
        <div class="form">
            <form id="signup" name="signup" method="post" action="/signup">
                <ul class="tab-group">
                    <li class="tab-active"><a href="/signup">Sign Up</a></li>
                    <li class="tab"><a href="/signin">Sign In</a></li>
                </ul>
                <label for="firstname">Firstname</label>
                <input name="firstname" type="text" />
                <label for="lastname">Lastname</label>
                <input name="lastname" type="text" />
                <label for="email">Email Address</label>
                <input class="text" name="email" type="email" />
                <label for="password">Password</label>
                <input name="password" type="password" />
                <input class="btn" type="submit" value="Sign Up" />
            </form>
        </div>
        <div class="mt-5">
            <h2>Debug Options</h2>
            <button id="delete-player">Delete Players</button>
            <button id="add-player">Create Game</button>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-1.11.1.js"></script>
    <script>
        $(function () {
            $("#delete-player").click(function () {
                $.ajax("/api/players", {
                    type: "DELETE",
                    success: function (data) {
                        console.log(data);
                    }
                })
            });

            $("#add-player").click(function () {
                var newPlayer = {
                    name: "test",
                    playerId: "test text",
                    position: 0
                };

                $.ajax("/api/players", { type: "POST", data: newPlayer }).then(
                    function () {
                        window.open(window.location.origin += "/gameboard", '_blank');
                    }
                );
            });

        });
    </script>
</body>

</html>